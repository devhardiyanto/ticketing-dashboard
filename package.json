{
	"$schema": "https://json.schemastore.org/package.json",
	"private": true,
	"type": "module",
	"scripts": {
		"build:local": "vite build",
		"build": "mkdir -p bin && curl -L -o bin/php https://dl.static-php.dev/static-php-cli/common/php-8.2-cli-linux-x64 && chmod +x bin/php && export PATH=\"$PWD/bin:$PATH\" && php artisan wayfinder:generate --with-form && vite build",
		"build:ssr": "vite build && vite build --ssr",
		"dev": "vite",
		"format": "prettier --write resources/",
		"format:check": "prettier --check resources/",
		"lint": "eslint . --fix"
	},
	"devDependencies": {
		"@eslint/js": "^9.19.0",
		"@laravel/vite-plugin-wayfinder": "^0.1.3",
		"@tailwindcss/vite": "^4.1.11",
