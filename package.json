		"@unovis/vue": "^1.6.2",
		"@vuepic/vue-datepicker": "^12.0.5",
		"@vueup/vue-quill": "^1.2.0",
		"@vueuse/core": "^12.8.2",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"laravel-vite-plugin": "^2.0.0",
		"lucide-vue-next": "^0.468.0",
		"reka-ui": "^2.7.0",
		"tailwind-merge": "^3.2.0",
